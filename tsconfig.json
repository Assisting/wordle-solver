{
    "compilerOptions": {
      "module": "ESNext",
      "target": "ESNext",
      "noImplicitAny": true,
      "sourceMap": true,
      "strict": true,
      "outDir": "build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "declaration": false,
      "importHelpers": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "strictPropertyInitialization": false
    },
    "exclude": ["node_modules"]
  }